 <!DOCTYPE html>
<html>
  <body>
    <h2>User info</h2>

    <p><%= image_tag @user.get_profile_image(100,100) %></p>

    <h5>name</h5>
    <h5><%= @user.name %></h5>

    <h5>introduction</h5>
    <h5><%= @user.introduction %></h5>

    <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
    <h2>New book</h2>
    <%= form_with model: Book.new, url:'/books', methood: :post do |f| %>
    <div class="title">
      <p class="title-text">Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="body">
      <p class="body-text">Opinion</p>
      <%= f.text_area :body %>
    </div>
    <div class="create"><%= f.submit 'Create Book' %></div>
   <% end %>



   <div>
     <h2>Book detail</h2>
     <% @books.each do |book| %>
       <div>
         <%= link_to user_path(current_user.id) do %>
           <%= image_tag @user.get_profile_image(100,100) %>
         <% end %>

         <%= link_to book_path(book.id) do %>
           <p><%= book.title %></p>
         <% end %>

         <p><%= book.body %></p>
         <%= link_to "削除", book_path(book.id), method: :delete %>
       </div>
       <% end %>
   </div>

   </body>
   </html>