 <!DOCTYPE html>
<html>
  <body>
   <div class="container">
     <div class="row">
      <div class="col-4">
      <p></p>
      <h2>User info</h2>

        <p><%= image_tag @user.get_profile_image(100,100) %></p>

        <h5>name</h5>
        <h5><%= @user.name %></h5>
        <h5>introduction</h5>
        <h5><%= @user.introduction %></h5>
        <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>

        <h2>New book</h2>
        <%= form_with model: Book.new, url:'/books', methood: :post do |f| %>
        <div class="title">
          <p class="title-text">Title</p>
           <%= f.text_field :title %>
        </div>

        <div class="body">
          <p class="body-text">Opinion</p>
            <%= f.text_area :body %>
        </div>
        <div class="create"><%= f.submit 'Create Book', class:"btn-success" %></div>
        <% end %>
        </div>


      <div class="col-8">
        <p></p>
        <h2>Books</h2>

        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
        <% @books.each do |book| %>
        <tbody>
            <tr>
              <td><%= link_to user_path(current_user.id) do %>
                     <%= image_tag @user.get_profile_image(100,100) %>
                  <% end %></td>
              <td><%= link_to book_path(book.id) do %>
                 <p><%= book.title %></p>
                  <% end %></td>
              <td><p><%= book.body %></p></td>
            </tr>
        </tbody>
       <% end %>
       </table>
      </div>

    </div>
   </div>

   </body>
   </html>