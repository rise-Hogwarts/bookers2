 <!DOCTYPE html>
<html>
  <body>

  <div class="container">
  <div class="row">
   <div class="col-4">
    <h2>User info</h2>

    <p><%= image_tag current_user.get_profile_image(100,100) %></p>

    <h5>name</h5>
    <h5><%= current_user.name %></h5>

    <h5>introduction</h5>
    <h5><%= current_user.introduction %></h5>


    <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>


    <h2>New book</h2>

   <%= form_with model: Book.new, url:'/books', methood: :post do |f| %>
    <div class="title">
      <p class="title-text">Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="body">
      <p class="body-text">Opinion</p>
      <%= f.text_area :body %>
    </div>
    <div class="create"><%= f.submit 'Create Book', class:"btn-success" %></div>
   <% end %>
</div>

<div class="col-8">
   <h2>Users</h2>
   <table class="table table-striped">
     <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </th>
     </thead>
  <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      </tbody>
    <% end %>

   </table>

</div>

</div>
</div>
