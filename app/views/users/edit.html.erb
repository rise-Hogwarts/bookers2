<div class="container">
<div class="row">
  <div class="w-50 mx-auto">
     <p></p>
     <h2>User info</h2>
     <%= form_with model: @user do |f| %>
       <p>Name</p>
       <%= f.text_field :name, class:"col-10 form-control" %>
       <p></p>
       <p>image</p>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

       <p></p>
       <p>introduction</p>
       <%= f.text_area :introduction, class:"col-10 form-control" %>
       <p></p>
       <%= f.submit "Update User", class:"btn btn-secondary" %>
     <% end %>

  </div>
</div>
</div>